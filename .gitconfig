[user]
	name = Stephen Edgar
	email = stephen@netweb.com.au

[credential]

[push]
	default = simple

[diff]
	noprefix = true

[grep]
	lineNumber = true
	extendRegexp = true

[alias]
	g = grep --break --heading --line-number
	st = status
	ci = commit
	co = checkout
	l = log --abbrev-commit --graph -n 20 --all --format=format:'%C(magenta)%h%C(reset) - %C(bold green)(%cr)%C(reset) %C(white)%s%C(reset) %C(yellow)- %cn%C(reset)%C(bold red)%d%C(reset)'

[core]
	editor = "code -n -w"
#	autocrlf = true <- Windows will need this!

[color]

[color "branch"]
	current = 10 reverse
	local = 11
	remote = 12

[color "diff"]
	whitespace = 12 reverse
	meta = 13
	frag = 11
	old = 9
	new = 10

[color "status"]
	added = 11
	changed = 10
	untracked = 14
	updated = 9 reverse
	branch = 9

[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f

